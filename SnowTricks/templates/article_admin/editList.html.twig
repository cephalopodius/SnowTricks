{% extends 'content_base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block content_body %}
    <div class="row">
    <d class="col-sm-12">
    <h1>Gestion des articles</h1>

    <table class="table table-striped">
    <thead>
    <tr>
        <th>Article</th>
        <th>Auteur</th>
        <th>Categorie</th>
        <th>Contenu</th>
        <th>Date de création</th>
        <th>Vidéo</th>
        <th>Gallerie</th>
        <th>Supprimer</th>

    </tr>
    </thead>
    <tbody>
    {% for article in article %}
        <tr>
            <td>
                <a href="{{path( "admin_edit_article", { id: article.id})}}">
                    {{ article.title }}
                </a>
            </td>
            <td>
                {{ article.author.firstName }}

            </td>
            <td style="width: 20%;">
                {{ article.groupe.groupname }}
            </td>
            <td style="width: 20%;">
                {{ article.content|length > 25 ? article.content|slice(0,25) ~'...' : article.content  }}

            </td>
            <td>
                 {{ article.publishedAt|date('Y-m-d') }}
            </td>
            <td>
                <a href="{{path( "article_admin_videoListAdd", { articleMatch: article.id})}}">
                    <i class="fa fa-camera" aria-hidden="true"></i>
                </a>
            </td>

            <td>
                <a href="{{path( "article_admin_galleryList", { articleMatch: article.id})}}">

                    <i class="fa fa-th" aria-hidden="true"></i>

                </a>
            </td>
            <td>
                <a rel="icon" href="{{path( "article_admin_delete", { id: article.id})}}">

                    <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
{% endblock %}
