{% extends 'content_base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block content_body %}
    <div class="row">
    <d class="col-sm-12">
    <h1>Gestion des articles</h1>

    <table class="table table-striped">
    <thead>
    <tr>
        <th>Article</th>
        <th>Auteur</th>
        <th>Categorie</th>
        <th>Contenu</th>
        <th>Date de cr√©ation</th>
    </tr>
    </thead>
    <tbody>
    {% for article in article %}
        <tr>
            <td>
                <a href="edit/{{ article.id }}">
                    {{ article.title }}
                </a>
            </td>
            <td>
                {{ article.author.firstName }}

            </td>
            <td style="width: 20%;">
                {{ article.groupe.groupname }}
            </td>
            <td style="width: 20%;">
                {{ article.content }}
            </td>
            <td>
                 {{ article.publishedAt|date('Y-m-d') }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
{% endblock %}