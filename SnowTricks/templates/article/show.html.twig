
{% extends 'content_base.html.twig' %}

   {% block title %}{{ article.title }}{% endblock %}
    {% block stylsheets %}
    {% endblock %}

{%  block content_body %}

    <body class="index is-preload">
    <div id="page-wrapper">

<div class="row">
    <    class="col-sm-12">
        <span class="show-article-title ">{{ article.title }}</span>
    <div class="row">
        <img class="show-article-img" src="{{ asset('images/'~ article.picture ~'') }}">
        <div class="show-article-title-container d-inline-block pl-3 align-middle">
            <div class="row">
            <span class="align-left article-details"><img class="article-author-img rounded-circle" src="{{ asset('images/users/'~ article.author.picture ~'') }}">{{ article.author.firstName }}</span>
            <span class="pl-2 article-details">  {{ article.publishedAt|date('Y-m-d')}} </span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="article-text">
            {{ article.content }}
        </div>
    </div>
</div>
<div class="row">

</div>
<div class="row">
    <div class="col-sm-12">
        <h3><i class="pr-3 fa fa-comment"></i> Commentaires</h3>

        <hr>

        <div class="row mb-5">
            <div class="col-sm-12">
                {% for comment in comment %}
                    {% if comment.article.id == article.id %}
                        <img class="comment-img rounded-circle" src="{{ comment.authorid.picture }}">
                        <div class="comment-container d-inline-block pl-3 align-top">

                    <span class="comment"> {{ comment.content }} </span>
                    {%  endif %}
                {% endfor %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="form-group">
                        <textarea class="form-control comment-form" id="articleText" rows="1"></textarea>
                    </div>
                    <button type="submit" class="btn btn-info">Commenter</button>
                    {% endif %}
                </div>

            </div>
        </div>

    </div>
</div>
    </div>
    </body>
{% endblock %}