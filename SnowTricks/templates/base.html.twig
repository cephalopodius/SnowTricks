<!DOCTYPE html>
<html>
<header id="header" class="alt">
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue!{% endblock %}</title>
        {% block stylesheets %}
            <meta charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
            <link rel="stylesheet" href="{{ asset('css/login.css') }}">
            <noscript> <link rel="stylesheet" href="{{ asset('css/noscript.css') }}"></noscript>
        {% endblock %}

    <!-- Header peeek machin fait pas grand chose == class="{ app.session.flashbag.peek('success')|length > 0 ? '' : 'mb-5' }} -->
{%  block Navbar %}
        <h1 id="logo"><a href="{{ path('app_homepage') }}">Snowtricks</a></h1>
        <nav id="nav" >
            <ul>
                <li class="current"><a href="{{ path('app_homepage') }}">Bienvenue</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="submenu">
                    <a  href="#">Administration</a>
                    <ul>
                        <li><a href="{{ path('admin_article_new') }}">Ajouter</a></li>
                        <li><a href="{{ path('admin_article_editList') }}">Editer</a></li>

                        <li><a href="contact.html">Contact</a></li>
                    </ul>
                </li>
                {% endif %}

                {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('app_logout') }}" class="button primary">DÃ©connection</a></li>
                {% else %}
                <li><a href="{{ path('app_login') }}" class="button primary">Se connecter</a></li>
                {% endif %}
            </ul>
        </nav>
{% endblock %}
    </header>
    <body>
    {% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
        {% endblock %}
    <!-- Footer -->
    {% block footer %}
        <footer id="footer">

            <ul class="icons">
                <li><a href="#" class="icon brands circle fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon brands circle fa-facebook-f"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon brands circle fa-google-plus-g"><span class="label">Google+</span></a></li>
                <li><a href="#" class="icon brands circle fa-github"><span class="label">Github</span></a></li>
                <li><a href="#" class="icon brands circle fa-dribbble"><span class="label">Dribbble</span></a></li>
            </ul>

            <ul class="copyright">
                <li>&copy; By Campino Robin</li><li>Belong to: Snowtricks</a></li>
            </ul>

        </footer>
    {%  endblock %}
{% block script %}
    <!-- Scripts -->
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/jquery.dropotron.min.js') }}"></script>
    <script src="{{ asset('js/jquery.scrolly.min.js') }}"></script>
    <script src="{{ asset('js/jquery.scrollex.min.js') }}"></script>
    <script src="{{ asset('js/browser.min.js') }}"></script>
    <script src="{{ asset('js/breakpoints.min.js') }}"></script>
    <script src="{{ asset('js/util.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>

{% endblock %}
    </body>
</html>
